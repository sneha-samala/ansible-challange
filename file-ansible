name: Deploy Infrastructure

on:
  push:
    branches:
      - main

jobs:
  terraform-ansible:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Setup Terraform
        uses: hashicorp/setup-terraform@v3

      - name: Terraform Init
        run: |
          cd terraform
          terraform init

      - name: Terraform Apply
        run: |
          cd terraform
          terraform apply -auto-approve
        env:
          AWS_ACCESS_KEY_ID: ${{ secrets.AWS_ACCESS_KEY_ID }}
          AWS_SECRET_ACCESS_KEY: ${{ secrets.AWS_SECRET_ACCESS_KEY }}

      - name: Get Terraform Outputs
        id: tf_outputs
        run: |
          cd terraform
          echo "amazon_ip=$(terraform output -raw amazon_ip)" >> $GITHUB_OUTPUT
          echo "ubuntu_ip=$(terraform output -raw ubuntu_ip)" >> $GITHUB_OUTPUT

      - name: Install Ansible
        run: sudo apt update && sudo apt install ansible -y

      - name: Generate Inventory
        run: |
          cd ansible
          echo "[amazon]" > inventory
          echo "${{ steps.tf_outputs.outputs.amazon_ip }} ansible_user=ec2-user" >> inventory
          echo "" >> inventory
          echo "[ubuntu]" >> inventory
          echo "${{ steps.tf_outputs.outputs.ubuntu_ip }} ansible_user=ubuntu" >> inventory

      - name: Run Ansible Playbook
        run: |
          cd ansible
          ansible-playbook -i inventory configure.yml
