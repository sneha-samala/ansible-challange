pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AKIA5MG5BGM66DU2XWW3')
        AWS_SECRET_ACCESS_KEY = credentials('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')
        AWS_DEFAULT_REGION    = 'us-east-1'
    }

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/sneha-samala/ansible-challange.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Run Ansible') {
            steps {
                dir('ansible') {
                    sh 'ansible-playbook -i inventory configure.yml'
                }
            }
        }
    }
}
